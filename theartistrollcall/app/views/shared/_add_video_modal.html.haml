.reveal-modal{data: {reveal: ''}, id: "ytModal", 'aria-labelledby': "firstModalTitle",  'aria-hidden': "true", role: "dialog"}
  %h2 Add Youtube Video
  .large-6.columns.small-centered
    .row.collapse.prefix-round
      =simple_form_for "video", url: video_index_path  do |f|
        .small-9.columns
          =f.input :url, label: false, placeholder: "Add Youtube Video", input_html: {value: ''}
        .small-3.columns
          =f.submit  "Add Video",  class: 'button postfix'
  %a{'aria-label': 'close', class: 'close-reveal-modal' }
