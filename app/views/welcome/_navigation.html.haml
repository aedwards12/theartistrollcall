%nav.nav-css.top-bar{data: {topbar: ''}, role: 'navigation'}
  %ul.title-area
    %li.name
      %h1
        = link_to 'WhoDatis', root_path, class: "logo_color"
      }
    %li.toggle-topbar.menu-icon
      = link_to 'menu', '#'

  %section.top-bar-section
    %ul.right#right_section
      - if user_signed_in?
        %li
          = image_tag(current_user.avatar, class: "circle_thumb_img")

        %li
          %span#link-border-bottom
            = link_to 'Log Out', destroy_user_session_path, method: :delete

      - else
        %li
          %span#link-border-bottom
            = link_to "auth/facebook", target: "_blank" do
              %i.fa.fa-twitter
              Login
      %li
        %span#link-border-bottom
          = link_to 'About', about_path
      %li
        %span#link-border-bottom
          = link_to 'Videos', video_index_path

      %li
        %span#link-border-bottom
          = link_to '#', :onclick => "$('#ytModal').foundation('reveal', 'open')" do
            %i= fa_icon 'plus'
            Youtube Video
    %ul.left.show-for-medium-up
      %li.has-form
        .row.collapse.search
          =render partial: "welcome/search_form"