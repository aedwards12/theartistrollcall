.columns.small-12.medium-9
  .row.transparent-box
    .columns.small-12.medium-11.small-centered
      .flex-video{id: "flex-video-#{@video.id}"}
        %iframe{ :width=>"420", :height=>"315", :src=>"http://www.youtube.com/embed/#{video.url}", :frameborder=>"0"}

      .columns.small-12.video-stats
        %ul.inline-list
          %li.source-font{id: "video-author-#{@video.id}"}
            %span
              %h6 Channel:
              = @video.yt_author
          %li.source-font{id: "video-count-#{@video.id}"}
            %span
              %h6 Views:
              = number_to_human(@video.yt_count)
          %li.source-font
            %span
              %h6 Published By:
              = "#{time_ago_in_words(@video.yt_pub_date)} ago"


          %li.source-font{id: "video-description-#{@video.id}"}
            %span
              %h6 Description:
              = @video.yt_description

          %a.button.small-12{id:"tag_dropdown",data: {dropdown: "contentDrop", options: 'align:top'}, 'aria-controls': "contentDrop", 'aria-expanded': "false"}
            Suggest Artists
          #contentDrop.f-dropdown.content.large{data: {'dropdown-content'=>""}, 'aria-hidden': "true", 'tabindex': "-1"}
            =form_tag video_tag_path(@video), method: :post, remote: true  do
              .row.radio-button-div
                =label_tag :artist_role, '1: Select Artist Type'
                .column.small-4.form-radio
                  =radio_button_tag(:artist_role, "dancer", required: true)
                  =label_tag(:artist_role, "Dancer")
                .column.small-4.form-radio
                  =radio_button_tag(:artist_role, "choreographer")
                  =label_tag(:artist_role, "Choreographer")
                .column.small-4.form-radio
                  =radio_button_tag(:artist_role, "assist_choreographer")
                  =label_tag(:artist_role, "Asst Choreographer")
              .row
                =label_tag :dancer_tags, '2: Add twitter handle of Aritst'
                .small-9.columns.no_padding
                  =text_field_tag :dancer_tags, nil , placeholder: "Tag dancers, artist, choreographers"
                .small-3.columns.no_padding
                  =submit_tag  "Add Artist",  class: 'button postfix'
        .row
          .column.small-12.tag-form
        /.row
        / #video_tags.small-12.columns
        / %h5 Tags
        / =render partial: "shared/dancer_list", locals: {dancer_list: video.dancer_list}

.columns.small-12.medium-3
  #twitter_list.small-12.columns
    %p Vote to approve artists in video or to remove artists that do not belong
    =render partial: "shared/twitter_list", locals: {twitter_list: @dancers, choreographer: @choreographer, assist_choreographers: @asst_choreographers}

